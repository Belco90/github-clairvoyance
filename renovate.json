{
	"extends": [
		"config:base",
		"helpers:pinGitHubActionDigests",
		":automergeTypes",
		"npm:unpublishSafe"
	],
	"prCreation": "not-pending",
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"internalChecksFilter": "strict",
	"ignoreDeps": ["msw", "headers-polyfill"],
	"packageRules": [
		{
			"description": [
				"Group all non-major pnpm development dependencies together, get updates once a month"
			],
			"matchManagers": ["npm"],
			"matchDepTypes": ["devDependencies"],
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "devDependencies (non-major)",
			"extends": ["schedule:monthly"]
		},
		{
			"description": "Get pnpm updates once a month",
			"matchDepTypes": ["packageManager"],
			"matchPackageNames": ["pnpm"],
			"extends": ["schedule:monthly"]
		},
		{
			"description": "Automerge ESLint and Prettier updates",
			"matchDepTypes": ["devDependencies"],
			"matchPackagePatterns": ["eslint", "prettier"],
			"automerge": true
		}
	]
}
